#include <stdio.h>

typedef struct{
    int codigo;
    char *nome;
} Profissao;


Profissao* aloca_profissao(unsigned int tamanho_nome){
    Profissao* nova = (Profissao*) malloc (sizeof(Profissao));
    nome* novo = (nome*) malloc(sizeof(tamanho_nome));
    
    return novo;
}
